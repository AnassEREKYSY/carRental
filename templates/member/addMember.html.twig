{% extends 'base.html.twig' %}
{% form_theme formAddEditMember 'bootstrap_4_layout.html.twig' %}
{% block body%}
    <style>
        .divCentral{
            border-radius:20px;
            box-shadow: 2px 2px 4px 2px rgba(0, 0, 0, 0.2);
        }
        button{
            border-radius:20px;
            box-shadow: 2px 2px 4px 2px rgba(0, 0, 0, 0.2);
        }
        .addInput{
            border-radius:20px;
            box-shadow: 2px 2px 4px 2px rgba(0, 0, 0, 0.2);
        }
        a{
            color:white;
        }
    </style>
    <div class="m-4 p-5 divCentral">
            <button class="btn btn-primary ">
                <a class="" href="{{ path('app_member') }}">
                    <i class="fas fa-home"></i>
                </a>
            </button>
            {% if etatButton ==1 %}
                <h1 style=" text-align: center;">Modification d'un membre</h1>
            {% else %}
                <h1 style=" text-align: center;">Ajout d'un membre</h1>
            {% endif %}
            <hr style="width: 550px; margin: 30px auto;">
            {{ form_start(formAddEditMember) }}
                {{ form_row(formAddEditMember.pseudo , {'attr':{'placeholder':"Pseudo du membre"}}) }}
                {{ form_row(formAddEditMember.nom , {'attr':{'placeholder':"Nom du membre"}}) }}
                {{ form_row(formAddEditMember.prenom , {'attr':{'placeholder':"Prénom du membre"}}) }}
                {{ form_row(formAddEditMember.email , {'attr':{'placeholder':"Email du membre"}} ) }}
                {{ form_row(formAddEditMember.mdp , {'attr':{'placeholder':"Mot de passe "}}) }}
                {{ form_row(formAddEditMember.civilite , {'attr':{'placeholder':"Vivilité du membre"}}) }}
                {% if etatButton==0%}
                    <button type="submit" class="btn btn-success mt-3">Ajouter le membre</button>
                {% else %}
                    <button type="submit" class="btn btn-primary mt-3">Modifier le membre</button>
                {% endif %}
            {{ form_end(formAddEditMember) }}
    </div>
{% endblock %}