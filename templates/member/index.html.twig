{% extends 'base.html.twig' %}
{% form_theme formSearch 'bootstrap_4_layout.html.twig' %}
{% block title %}Hello MemberController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { 
        margin: 1em auto; 
        max-width: 1300px;
         width: 100%; 
         font: 18px/1.5 sans-serif; 
    }
        a{
        text-decoration:none;
        color : white;
    }
    table{
        text-align:center;
    }
    button{
        border-radius:20px;
        box-shadow: 2px 2px 4px 2px rgba(0, 0, 0, 0.2);
    }
    tr,td{
        cursor: pointer;
    }
    .loginout{
        width:200px;
        right:10px;
        top: 5px;
        position:absolute;
    }
    .loginout button {
        margin:20px;
    }
    .login button {
        margin:20px;
    }
    .login{
        width:200px;
        right:10px;
        top: 5px;
        position:absolute;
    }
    nav{
        height:80px;
    }
    .searchInput{
        border-radius:20px;
        box-shadow: 2px 2px 4px 2px rgba(0, 0, 0, 0.2);
        width:650px;
        top:20px;
        right:340px;
        position: absolute;
    }
    .searchBtn{
        border-radius:40px;
        right:280px;
        top: 5px;
        position:absolute;
    }
    .addBtn{
        border-radius:40px;
        right:190px;
        top: 5px;
        position:absolute;
        width:40px;
        height:40px;
        justify-content:center;
    }
    .addBtn a {
        color:white;
    }
    .pageTitle{
        font-size:35px;
        right:1000px;
        top: 5px;
        position:absolute;
    }
</style>

<div class="example-wrapper">
    <nav class="navbar navbar-expand-lg navbar-light bg-light shadow p-2 m-5 bg-body rounded  text-center">
        <div class="container-fluid">
            <a class="navbar-brand fw-bolder mx-5 pageTitle" href="{{ path('app_member') }}">Member</a>
            <div class="collapse navbar-collapse mx-5" id="navbarColor03">
                    <ul class="navbar-nav me-auto ">
                    
                        <button class="btn btn-primary mt-3 addBtn">
                            <a class="" href="{{ path('app_member_add') }}">
                                <i class="fas fa-plus"></i>
                            </a>
                        </button>
                        <li>
                            {{ form_start(formSearch) }}
                                {{ form_row(formSearch.champs, {'attr': {'placeholder': "Tapez ...."}}) }}
                                <button type="submit" class="btn btn-primary mt-3 searchBtn">
                                    <i class="fas fa-search"></i> 
                                </button>
                            {{ form_end(formSearch) }}

                        </li>
                        <li>
                            <div class="loginout">
                                <button type="submit" class="btn btn-primary mt-3">
                                    <a  href="{{ path('app_member_login') }}">
                                        <i class="fas fa-user"></i>
                                    </a>
                                </button>
                            </div>
                            
                        </li>
                    </ul>

            </div>
        </div>
    </nav>
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Pseudo</th>
                <th scope="col">Nom</th>
                <th scope="col">Prenom</th>
                <th scope="col">Email</th>
                <th scope="col">Civilit√©</th>
                <th scope="col">Date d'enregistrement</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            {% if members%}
                {% for member in members %}
                        <tr>
                            <td scope="col">{{member.id}}</td>
                            <td scope="col">{{member.pseudo}}</td>
                            <td scope="col">{{member.nom}}</td>
                            <td scope="col">{{member.prenom}}</td>
                            <td scope="col">{{member.email}}</td>
                            {% if member.civilite == 0 %}
                                <td scope="col">Femme</td>
                            {% else %}
                                <td scope="col">Homme</td>
                            {% endif %}
                            <td scope="col">{{member.getDateEnregistrement | date('d/m/y') }}</td>
                            <td scope="col">
                                <button type="button" class="btn btn-primary btn-sm">
                                    <a href="{{ path('app_member_edit',{'id':member.id})}}">
                                        <i class="fas fa-pen"></i>
                                    </a>
                                </button>
                                <button type="button" class="btn btn-danger btn-sm">
                                    <a href="{{ path('app_member_delete',{'id':member.id})}}">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </button>
                            </td>
                        </tr>
                   {% endfor %}
                {% endif %}
        </tbody>
    </table>
</div>
{% endblock %}
